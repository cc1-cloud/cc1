"""
@author Maciej Nabozny <mn@mnabozny.pl>
"""

import subprocess
import sys
sys.path.append('/usr/lib/cc1/')
from clm import config

def create():
    if 'HOST' not in config.DATABASES['default']:
        subprocess.call(['su', 'postgres', '-c', "psql -c \"CREATE USER cc1;\""])
        subprocess.call(['su', 'postgres', '-c', "psql -c \"CREATE DATABASE clm WITH OWNER cc1;\""])
    return 0

def remove():
    if 'HOST' not in config.DATABASES['default']:
        subprocess.call(['su', 'postgres', '-c', "psql -c \"REVOKE ALL PRIVILEGES ON DATABASE clm FROM cc1;\""])
    return 0

def purge():
    remove()
    subprocess.call(['su', 'postgres', '-c', "psql -c \"DROP DATABASE clm;\""])
    return 0

if __name__ == "__main__":
    if len(sys.argv) == 2 and sys.argv[1] == 'create':
        sys.exit(create())
    elif len(sys.argv) == 2 and sys.argv[1] == 'remove':
        sys.exit(remove())
    elif len(sys.argv) == 2 and sys.argv[1] == 'purge':
        sys.exit(purge())
    else:
        print "Usage: %s [create|remove|purge]" % sys.argv[0]

