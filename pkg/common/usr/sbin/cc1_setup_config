"""

import sys
sys.path.append('/usr/lib/cc1/')
from common.tools.config import *

if __name__ == "__main__":
    if len(sys.argv) == 3 and sys.argv[1] == 'configure':
        sys.exit(configure(sys.argv[2]))
    elif len(sys.argv) == 3 and sys.argv[1] == 'remove':
        sys.exit(remove(sys.argv[2]))
    elif len(sys.argv) == 3 and sys.argv[1] == 'purge':
        sys.exit(purge(sys.argv[2]))
    else:
        print "Usage:   %s configure|remove|purge site" % sys.argv[0]
        sys.exit(1)

